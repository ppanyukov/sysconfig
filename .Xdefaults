! vim:enc=utf-8:nu:ai:si:et:ts=4:sw=4:ft=xdefaults:
Xft.antialias:              true


!-------------------------------------------------------------------------------
!
!   U R X V T - M L - Setting
!
! For normal urxvt, change URxvt-ml* to URxvt*
!
! This scheme is a nice black background with the white text and scrollbar.
URxvt*geometry:             120x25
! Black letters on slightly off white background
URxvt*background:           #D9D9D9
URxvt*foreground:           #050505
!URxvt*background:           #F1F1F1
!URxvt*foreground:           black
!URxvt*inheritPixmap:        true
!URxvt*reverseVideo:         false
!URxvt*tintColor:            #dfdfdf
URxvt*shading:              20      !trans, 0=opaque

! The percentage to fade when not in focus
URxvt*fading:               50      !term unfocus

URxvt*font:           xft:Monospace:size=11:medium:roman:antialias=true, \
                      xft:Bitstream Vera Sans Mono:size=11:medium:roman:antialias=true, \
                      xft:Consolas:size=11:medium:roman:antialias=true

URxvt*boldFont:       xft:Monospace:size=11:bold:roman:antialias=true, \
                      xft:Bitstream Vera Sans Mono:size=11:bold:roman:antialias=true, \
                      xft:Consolas:size=11:medium:roman:antialias=true

URxvt*italicFont:     xft:Monospace:size=11:medium:italic:autohint=true:antialias=true, \
                      xft:Bitstream Vera Sans Mono:size=11:medium:italic:autohint=true:antialias=true, \
                      xft:Consolas:size=11:medium:roman:antialias=true

URxvt*boldItalicFont: xft:Monospace:size=11:bold:italic:autohint=true:antialias=true, \
                      xft:Bitstream Vera Sans Mono:size=11:bold:italic:autohint=true:antialias=true, \
                      xft:Consolas:size=11:medium:roman:antialias=true

URxvt.letterSpace: -1



! Bitstream veranda font for the systems lacking Monospace
!URxvt*font:           xft:Bitstream Vera Sans Mono:size=12:medium:roman:antialias=true
!URxvt*boldFont:       xft:Bitstream Vera Sans Mono:size=12:bold:roman:antialias=true
!URxvt*italicFont:     xft:Bitstream Vera Sans Mono:size=12:medium:italic:autohint=true:antialias=true
!URxvt*boldItalicFont: xft:Bitstream Vera Sans Mono:size=12:bold:italic:autohint=true:antialias=true

!URxvt*termname:             rxvt-unicode
URxvt*termname:             rxvt-256color
URxvt*scrollstyle:          rxvt
URxvt*scrollBar:            true
URxvt*scrollBar_floating:   false
URxvt*scrollBar_right:      true
URxvt*scrollColor:          grey
URxvt*borderColor:          pink
URxvt*saveLines:            5500
!URxvt*cursorColor:          #d8d8d8
!URxvt*colorBD:              lightyellow
!URxvt*colorUL:              yellow
!URxvt*tintColor:	        white

! terminal colors ------------------------------------------------------------
!
! Here are the meanings of the colors:
! color0    (black)     = Black
! color1    (red)   = Red3
! color2    (green)     = Green3
! color3    (yellow)    = Yellow3
! color4    (blue)  = Blue3
! color5    (magenta)   = Magenta3
! color6    (cyan)  = Cyan3
! color7    (white)     = AntiqueWhite
! color8    (bright black)  = Grey25
! color9    (bright red)    = Red
! color10   (bright green)  = Green
! color11   (bright yellow)     = Yellow
! color12   (bright blue)   = Blue
! color13   (bright magenta)    = Magenta
! color14   (bright cyan)   = Cyan
! color15   (bright white)  = White
! foreground        = Black
! background        = White 
!
! Redefine these to replace colors with other colors.
!
! Lighter shade of blue to make directory names look better
! with the color ls on dark background
URxvt*color4:DarkBlue
URxvt*color12:DarkBlue

! Replace very bad bright green used to display executable files
! with dark green.
URxvt*color3:DarkGreen
URxvt*color10:DarkGreen

! Replace bright cyan used to display symbolic links with a
! better shade.
URxvt*color14:#0087E0
